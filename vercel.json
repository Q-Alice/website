{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "app.py",
            "requirements.txt",
            "Pipfile",
            "Pipfile.lock"
          ],
          "excludeFiles": [
            "tests/*",
            "docs/*",
            "__pycache__/*",
            "*.md",
            "*.log"
          ]
        }
      },
      {
        "src": "app.py",
        "use": "@vercel/python",
        "config": {
          "includeFiles": [
            "app.py",
            "requirements.txt",
            "Pipfile",
            "Pipfile.lock"
          ],
          "excludeFiles": [
            "tests/*",
            "docs/*",
            "__pycache__/*",
            "*.md",
            "*.log"
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/app.py"
      },
      {
        "src": "/(.*)",
        "dest": "/"
      }
    ]
  }
  