{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "api/**/*",
            "next.config.js",
            "package.json"
          ],
          "excludeFiles": [
            "tests/**/*",
            "docs/**/*",
            "__pycache__/**/*",
            "*.md",
            "*.log",
            "node_modules/**/*"
          ]
        }
      },
      {
        "src": "api/index.py",
        "use": "@vercel/python",
        "config": {
          "includeFiles": [
            "api/**/*",
            "requirements.txt"
          ],
          "excludeFiles": [
            "tests/**/*",
            "docs/**/*",
            "__pycache__/**/*",
            "*.md",
            "*.log"
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/index.py"
      },
      {
        "src": "/(.*)",
        "dest": "/"
      }
    ]
  }
  